<form name="frmMonster"
      formType="sheetTemplate"
      dataType="br.com.mineBR55.mob"
      width="1000"
      height="700">

    <dataScopeBox/>

    <tabControl align="client">

        <!-- ================= ABA PRINCIPAL ================= -->
        <tab title="Principal">

            <scrollBox align="client">

                <flowLayout orientation="vertical" align="top">

                    <!-- TÍTULO -->
                    <label text="MONSTRO"
                           fontSize="22"
                           height="40"/>

                    <!-- NOME -->
                    <edit field="name"
                          width="350"
                          height="30"/>

                    <horzLine strokeSize="2"/>

                    <!-- ATRIBUTOS PRINCIPAIS -->
                    <flowLayout orientation="horizontal" height="40">

                        <label text="CA:" width="40"/>
                        <edit field="ac" width="60"/>

                        <label text="HP:" width="40"/>
                        <edit field="hp" width="80"/>

                        <label text="/" width="20"/>
                        <edit field="hpMax" width="80"/>

                    </flowLayout>

                    <!-- DANO / CURA -->
                    <flowLayout orientation="horizontal" height="40">

                        <edit field="hpInput"
                              width="200"/>

                        <button name="btnDamage"
                                text="Dano"
                                width="80"
                                height="30"/>

                        <button name="btnHeal"
                                text="Cura"
                                width="80"
                                height="30"/>

                    </flowLayout>

                    <horzLine strokeSize="2"/>

                    <!-- ATRIBUTOS D&D -->
                    <label text="ATRIBUTOS"
                           fontSize="18"
                           height="30"/>

                    <flowLayout orientation="horizontal" height="80">

                        <flowLayout orientation="vertical" width="100">
                            <label text="FOR"/>
                            <edit field="str" width="60"/>
                            <label field="strMod" />
                        </flowLayout>

                        <flowLayout orientation="vertical" width="100">
                            <label text="DES"/>
                            <edit field="dex" width="60"/>
                            <label field="dexMod" />
                        </flowLayout>

                        <flowLayout orientation="vertical" width="100">
                            <label text="CON"/>
                            <edit field="con" width="60"/>
                            <label field="conMod" />
                        </flowLayout>

                        <flowLayout orientation="vertical" width="100">
                            <label text="INT"/>
                            <edit field="int" width="60"/>
                            <label field="intMod" />
                        </flowLayout>

                        <flowLayout orientation="vertical" width="100">
                            <label text="SAB"/>
                            <edit field="wis" width="60"/>
                            <label field="wisMod" />
                        </flowLayout>

                        <flowLayout orientation="vertical" width="100">
                            <label text="CAR"/>
                            <edit field="cha" width="60"/>
                            <label field="chaMod" />
                        </flowLayout>

                    </flowLayout>

                </flowLayout>

            </scrollBox>

        </tab>

        <!-- ================= ABA AÇÕES ================= -->
        <tab title="Ações">

            <flowLayout orientation="vertical" align="top">

                <button name="btnAddAction"
                        text="Adicionar Ação"
                        width="150"
                        height="30"/>

                <recordList name="rclActions"
                            field="actions"
                            templateForm="frmAction"
                            height="400"/>

            </flowLayout>

        </tab>

    </tabControl>

</form>