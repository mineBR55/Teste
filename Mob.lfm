<?xml version="1.0" encoding="UTF-8"?>
<form name="frmMonster"
      width="650"
      height="750"
      theme="dark">

  <dataScopeBox />

  <scrollBox align="client">

    <label text="MONSTRO" fontSize="18" fontColor="#FFFFFF"/>

    <edit field="name"
          width="500"
          height="30"
          transparent="true"/>

    <horzLine strokeColor="#666666" strokeSize="2"/>

    <label text="DEFESA" fontSize="14" fontColor="#FFAA00"/>

    <flowLayout orientation="horizontal" height="30">

      <label text="AC:" width="40"/>
      <edit field="ac" width="50" transparent="true"/>

      <label text="HP:" width="50"/>
      <edit field="hp" width="60" transparent="true"/>

      <label text="/" width="20"/>
      <edit field="hpMax" width="60" transparent="true"/>

    </flowLayout>

    <flowLayout orientation="horizontal" height="30">

      <edit field="hpInput"
            width="200"
            transparent="true"/>

      <button name="btnDamage"
              text="Dano"
              width="60"
              height="25"/>

      <button name="btnHeal"
              text="Cura"
              width="60"
              height="25"/>

    </flowLayout>

  </scrollBox>

</form>