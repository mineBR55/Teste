<form name="frmMob" dataType="br.com.mineBR55.mob">

    <scrollBox align="client">

        <layout align="top" height="40">
            <label text="Nome" width="100"/>
            <edit field="nome" width="200"/>
        </layout>

        <layout align="top" height="40">
            <label text="Tipo de Criatura" width="150"/>
            <edit field="tipo" width="200"/>
        </layout>

        <layout align="top" height="40">
            <label text="HP" width="50"/>
            <edit field="hp" width="80"/>

            <label text="CA" width="50"/>
            <edit field="ca" width="80"/>
        </layout>

        <layout align="top" height="30">
            <label text="Força" width="80"/>
            <edit field="forca" width="50"/>
            <edit field="mod_forca" width="50" readOnly="true"/>
        </layout>

        <layout align="top" height="30">
            <label text="Destreza" width="80"/>
            <edit field="destreza" width="50"/>
            <edit field="mod_destreza" width="50" readOnly="true"/>
        </layout>

        <layout align="top" height="30">
            <label text="Constituição" width="100"/>
            <edit field="constituicao" width="50"/>
            <edit field="mod_constituicao" width="50" readOnly="true"/>
        </layout>

        <layout align="top" height="30">
            <label text="Inteligência" width="100"/>
            <edit field="inteligencia" width="50"/>
            <edit field="mod_inteligencia" width="50" readOnly="true"/>
        </layout>

        <layout align="top" height="30">
            <label text="Sabedoria" width="100"/>
            <edit field="sabedoria" width="50"/>
            <edit field="mod_sabedoria" width="50" readOnly="true"/>
        </layout>

        <layout align="top" height="30">
            <label text="Carisma" width="80"/>
            <edit field="carisma" width="50"/>
            <edit field="mod_carisma" width="50" readOnly="true"/>
        </layout>

    </scrollBox>

</form>