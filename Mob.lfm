<?xml version="1.0" encoding="UTF-8"?>
<form
    name="frmMonster"
    formType="sheetTemplate"
    dataType="br.com.mineBR55.mob"
    width="900"
    height="700"
    theme="dark">

    <dataScopeBox/>

    <layout align="client">

        <scrollBox align="client">

            <!-- HEADER -->
            <rectangle
                align="top"
                height="120"
                color="#2f2f2f">

                <layout align="left" width="500">
                    <label
                        text="Nome do Monstro"
                        align="top"/>

                    <edit
                        field="name"
                        align="top"
                        height="40"
                        fontSize="20"/>
                </layout>

                <layout align="right" width="250">

                    <label text="Classe de Armadura" align="top"/>
                    <edit field="ac" align="top" height="30"/>

                    <label text="HP" align="top"/>

                    <flowLayout align="top" height="30">
                        <edit field="hp" width="60"/>
                        <label text="/" width="20"/>
                        <edit field="hpMax" width="60"/>
                    </flowLayout>

                </layout>

            </rectangle>

            <!-- ATRIBUTOS -->
            <rectangle
                align="top"
                height="120"
                color="#242424">

                <label
                    text="ATRIBUTOS"
                    align="top"
                    fontSize="14"/>

                <flowLayout
                    align="top"
                    height="80">

                    <layout width="80">
                        <label text="FOR"/>
                        <edit field="str"/>
                    </layout>

                    <layout width="80">
                        <label text="DES"/>
                        <edit field="dex"/>
                    </layout>

                    <layout width="80">
                        <label text="CON"/>
                        <edit field="con"/>
                    </layout>

                    <layout width="80">
                        <label text="INT"/>
                        <edit field="int"/>
                    </layout>

                    <layout width="80">
                        <label text="SAB"/>
                        <edit field="wis"/>
                    </layout>

                    <layout width="80">
                        <label text="CAR"/>
                        <edit field="cha"/>
                    </layout>

                </flowLayout>

            </rectangle>

            <!-- DESCRIÇÃO -->
            <rectangle
                align="top"
                height="200"
                color="#2f2f2f">

                <label
                    text="DESCRIÇÃO"
                    align="top"/>

                <textEditor
                    field="description"
                    align="client"/>

            </rectangle>

        </scrollBox>

    </layout>

</form>